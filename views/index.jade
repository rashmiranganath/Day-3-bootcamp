block content
  form(method = "post")
    p Book name :
      input(type = "text",name = "bookname")
    p Book author :
      input(type = "text",name = "bookauthor")
    p Book id :
      input(type = "text",name = "bookid")
    p Submit :
    div.actions
      input(type = "submit", value = "add")
  
